#include <stdio.h>
#include <string.h>

int main() {
    char nt, first[100], second[100];
    printf("Enter production (A->alpha beta | alpha gamma):\n");
    scanf(" %c->%s|%s", &nt, first, second);

    int i = 0;
    while (first[i] && second[i] && first[i] == second[i]) i++;

    if (i > 0) {
        printf("Left factoring possible:\n");
        printf("%c -> %.*s%c'\n", nt, i, first, nt);
        printf("%c' -> %s | %s\n", nt, first + i, second + i);
    } else {
        printf("No left factoring needed.\n");
    }
    return 0;
}
