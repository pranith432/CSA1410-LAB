%{
#include <stdio.h>
int lineno = 1;
%}

%%
.*\n {
    printf("%4d: %s", lineno++, yytext);
}
%%

int yywrap() { return 1; }

int main(int argc, char *argv[]) {
    if(argc < 2) {
        printf("Usage: %s <inputfile.c>\n", argv[0]);
        return 1;
    }
    FILE *f = fopen(argv[1], "r");
    if(!f) {
        perror("File open error");
        return 1;
    }
    yyin = f;
    yylex();
    fclose(f);
    return 0;
}
