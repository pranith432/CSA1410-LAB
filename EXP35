%{
#include <stdio.h>
%}

%%
[0-9]+(\.[0-9]+)?([eE][-+]?[0-9]+)?  { printf("Constant: %s\n", yytext); }
"'"([^'\\]|\\.)"'"                    { printf("Constant (char): %s\n", yytext); }
\"([^\\\"]|\\.)*\"                    { printf("Constant (string): %s\n", yytext); }
.                                    { /* ignore others */ }
\n                                   { /* ignore newline */ }
%%

int yywrap() { return 1; }

int main(int argc, char *argv[]) {
    if(argc < 2) {
        printf("Usage: %s <inputfile.c>\n", argv[0]);
        return 1;
    }
    FILE *f = fopen(argv[1], "r");
    if (!f) {
        perror("File open error");
        return 1;
    }
    yyin = f;
    yylex();
    fclose(f);
    return 0;
}
